package com.test.spring.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@Controller
public class BoardController {

	// "/spring/board/lsit.do"
	// "/spring/board/add.do"
	// "/spring/board/addok.do"
	// "/spring/board/view.do"
	
	
	//doGet() 역할
	@RequestMapping(value="/board/list.do", method=RequestMethod.GET)
	public String list() {
		
		// 경로 : "WEB-INF/views/board/list.jsp"
		return "board/list";
	}
	
	//doGet() 역할
	@RequestMapping(value="/board/add.do" , method=RequestMethod.GET)
	public String add() {
		
		return "board/add";
	}
	
	//doPost() 역할
	@RequestMapping(value="/board/addok.do", method=RequestMethod.POST)
	public String addok() {
		return "board/addok";
	}
	
	@RequestMapping(value="/board/view.do", method=RequestMethod.GET)
	public String view() {
		return "board/view";
	}
	
}
