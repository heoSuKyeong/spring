	//5. JSON 반환
	@GetMapping(value="/ex06.do")
	public @ResponseBody List<SpringDTO> SpringDTO test() {
		
		SpringDTO dto = new SpringDTO();
		dto.setName("홍길동");
		dto.setAge("20");
		dto.setAddress("서울시");
		
		SpringDTO dto2 = new SpringDTO();
		dto.setName("수수깡");
		dto.setAge("26");
		dto.setAddress("서울시");
		
		List<SpringDTO> list = new ArrayList<SpringDTO>();
		list.add(dto);
		list.add(dto2);
		
		return dto;
	}
	
	
	
	
	
}
